#personalization
  %h1 THE BODY TEST
  .content-box
    %h1 Tell us about yourself

    .primer-wrapper
      #p13n-box
        = form_for @user, url: save_user_path do |user|
          .error-explanation
            - if @user.errors.any? || @personalization_survey.errors.any?
              %ul
                - @user.errors.full_messages.each do |msg|
                  %li= msg
                - @personalization_survey.errors.full_messages.each do |msg|
                  %li= msg
          .input-content
            .name
              Whatâ€™s your first name?
              = user.text_field :first_name, :input_html => {:autofocus => true}
            .gender
              What's your gender?
              = user.select(:gender, options_for_select(@gender_hash), :include_blank => true)
            = fields_for @personalization_survey, @user.personalization_survey do |survey|
              .referral
                How did you hear about us? *
                = survey.select(:referral, options_for_select(@referral_hash), :include_blank => true)

          .submit-button
            = user.submit "Next, Personalize your body test!"


